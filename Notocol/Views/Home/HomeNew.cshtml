@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/NewLayout.cshtml";
}
@section controllerScripts{
<script src="~/Scripts/Home/pageController.js" type="text/javascript"></script>
}
<div>
{{searchData.tags}}
</div>

<div class="right-col2" ng-controller="TabController as tab">
    <div class="tab-nav">
    
        <a href="#" ng-show="searchData.searchActive"
           ng-class='{"selected-tab":IsActiveTab("All")}'
           ng-click="OnClickTab('All')">All</a>

        <a href="#"
           ng-class='{"selected-tab":IsActiveTab("own")}'
           @*ng-click="event.preventDefault() ;OnClickTab('own')"*@>My Notes</a>

        <a href="#"
           ng-class='{"selected-tab":IsActiveTab("others")}'
           @*ng-click="event.preventDefault() ;OnClickTab('others')"*@>Notes from Others</a>


        
    </div>
    <div>


    </div>
    <div class="dropdown">
        Sort by
        <label>
            <select>
                <option selected> Latest </option>
                <option>Popularity</option>
            </select>
        </label>
    </div>
</div>
<div class="right-col3" id="style-3" ng-controller="PageController as pageController">
    
    <i ng-show="loading">Loading...</i>
    
    
    <div id="container">
        <div id="main" role="main">
            <ul id="tiles">
                <!-- These are our grid blocks -->
                <li ng-repeat="page in pageList" ng-init="$last && updateLayout()" images-loaded-events="imgLoadedEvents" class="images-loaded">
                    <page-tile page="page" open-page-details="openPageDetails(page)" tag-click-handler="addTagFilter(tag)"></page-tile>
                </li>

                <!-- End of grid blocks -->
            </ul>

        </div>
    </div>


</div>

<script src="~/Scripts/jquery.wookmark.js"></script>