@using Model
@model IList<Source>

<div class="row">
    @{

        foreach (var source in Model)
        {
            <div class="col-sm-3 pageBox">
                <a href="@source.Link">@source.Title</a>

                <p>@source.Summary</p>
                <div>
                    @if (!String.IsNullOrEmpty(@source.TagNames)) { 
                        <div class="tagsText"><span class="glyphicon glyphicon-tag"></span> @source.TagNames </div>
                    }
                    <div class="viewNotesButton">
                        <button class="btn btn-default btn-xs view-notes" data-toggle="modal" data-target="#notes">View notes</button>
                        <div class="modal fade" id="notes" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h4 class="modal-title" id="myModalLabel">
                                            <a href="@source.Link">@source.Title</a>
                                        </h4>
                                    </div>
                                    <div class="modal-body">
                                        <p>Hello world!</p>
                                        <div id="annotationList"></div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div><!-- /.modal-content -->
                            </div><!-- /.modal-dialog -->
                        </div><!-- /.modal -->
                      </div>
                    </div>

            </div>
        }

    }


</div>
