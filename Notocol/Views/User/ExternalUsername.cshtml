
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-info">Welcome @ViewBag.ExternalUserName</h4>
<div class="row"></div>
<div class="row">

    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <form role="form" class="form-inline" id="usernameForm" method="post" action="@Url.Action("RegisterExternalUser", "User")">

            <div class="form-group">
                <label for="username">Enter a username you would like to user here</label>
                <input type="text" class="form-control resettable" id="username" name="username" placeholder="Username" style="border:none">
                @if (ViewBag.UsernameExists != null)
                {
                    <p class="text-danger"> Username already exists, pick another</p>
                }

                <button type="submit" class="btn btn-default">Submit</button>
            </div>

        </form>
    </div>
    <div class="col-sm-4"></div>
</div>